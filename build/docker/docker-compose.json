{
  "shares": {
    "image": "tianon/true",
    "volumes": [
      "./configs:/configs",
      "/etc/localtime:/etc/localtime:ro",
      "./media:/data",
      "./temp:/temp"
    ]
  },
  "sabnzbd": {
    "image": "linuxserver/sabnzbd",
    "volumes_from": [
      "shares"
    ],
    "volumes": [
      "./configs/sabnzbd:/config",
      "./temp/download:/incomplete",
      "./temp/complete:/complete",
      "./temp/complete/TV:/tv",
      "./temp/complete/Movies:/movies"
    ],
    "environment": [
      "PUID=0",
      "PGID=0",
      "TZ=Europe/Copenhagen"
    ],
    "ports": [
      "8080:8080",
      "9090:9090"
    ],
    "extra_hosts": [
      "0.0.0.0:localhost"
    ],
    "restart": "always"
  },
  "sickgear": {
    "image": "ressu/sickgear",
    "volumes_from": [
      "shares"
    ],
    "volumes": [
      "./configs/sickgear:/data",
      "./temp/complete/TV:/incoming",
      "./media/TV:/tv"
    ],
    "links": [
      "sabnzbd"
    ],
    "ports": [
      "8081:8081"
    ],
    "environment": [
      "TZ=Europe/Copenhagen"
    ],
    "extra_hosts": [
      "0.0.0.0:localhost"
    ],
    "restart": "always"
  },
  "couchpotato": {
    "image": "linuxserver/couchpotato",
    "volumes_from": [
      "shares"
    ],
    "volumes": [
      "./configs/couchpotato:/config",
      "./configs/couchpotato/downloads:/downloads",
      "./temp/movies/release:/completed",
      "./media/Movies:/movies"
    ],
    "links": [
      "sabnzbd",
      "transmission"
    ],
    "ports": [
      "5050:5050"
    ],
    "environment": [
      "PUID=0",
      "PGID=0",
      "TZ=America/New_York"
    ],
    "extra_hosts": [
      "0.0.0.0:localhost"
    ],
    "restart": "always"
  }
}
